@using TravelAgencyCoreProject.Areas.Admin.Models
@model UpdateRoleViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Role</h1>

<form asp-action="UpdateRole" method="post">
    <input type="hidden" asp-for="RoleID" />
    <label>Role Name</label>
    <input type="text" class="form-control" asp-for="RoleName" />
    <br />
    <button class="btn btn-outline-success">Update Role</button>
</form>