@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Role List</h1>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Role</th>
            <th>Delete Role</th>
            <th>Update Role</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                
                
                <td><a href="@Url.Action("DeleteRole", "Role", new{id = item.Id})" class="btn btn-outline-danger">Delete</a></td>
                <td><a href="@Url.Action("UpdateRole", "Role", new{id = item.Id})" class="btn btn-outline-success">Update</a></td>
            </tr>
        }

    </table>
}

else
{
    <div class="alert alert-success">
        <span>Can not find any role!</span>
    </div>
}

<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Add New Role</a>