@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>
<h1>Active Tour Routes</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Capacity</th>
        <th>Price</th>
        <th>See on WebSite</th>
        <th>Delete</th>
        <th>Update</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>

            <td>@item.City</td>
            <td>@item.Capacity</td>
            <td>@item.Price</td>
            <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info">See on Website</a></td>
            <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success">Update</a></td>
            
        </tr>
    }
</table>

<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary"> New Destination </a>

