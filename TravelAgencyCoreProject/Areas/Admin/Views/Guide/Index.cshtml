@using EntityLayer.Concrete
@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    img{
        border-radius:50%
    }
</style>

<h1>Guide List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name Surname</th>
        <th>Description</th>
        <th>Status</th>
        <th>Edit</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.GuideID</td>
            <td><img src="@item.Image" height="50" width="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @{
                    if (item.Status == true)
                    {
                        <a href="@Url.Action("ChangeToFalse","Guide", new{id = @item.GuideID})" class="btn btn-outline-warning">Make Inactive</a>
                    }
                    else
                    {
                        <a href="@Url.Action("ChangeToTrue","Guide", new{id = @item.GuideID})" class="btn btn-outline-info">Make Active</a>
                    }
                }
            </td>
            <td><a href="@Url.Action("EditGuide","Guide")" class="btn btn-outline-success">Edit</a></td>
        </tr>
    }
</table>
<a href="@Url.Action("AddGuide","Guide")" class="btn btn-outline-primary">Add a New Guide</a>
