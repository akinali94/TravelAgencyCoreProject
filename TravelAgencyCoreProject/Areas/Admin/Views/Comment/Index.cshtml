@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Comment List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>User</th>
        <th>Comment</th>
        <th>Destination</th>
        <th>Date</th>
        <th>Delete</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CommentID</td>
            <td>@item.CommentUser</td>
            @*<td>@item.AppUser.UserName</td>*@
            <td>@item.CommentContent</td>
            <td>@item.Destination.City</td>
            <td>@(((DateTime)item.CommentTime).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Admin/CommentController/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>

